<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SparkyOutOfBounds" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/coffee</item>
        <item name="colorPrimaryVariant">@color/mustard</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/pinky</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="buttons">
        <item name="backgroundTint">@color/green</item>
        <item name="android:fontFamily">@font/josefin_sans</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="titles">
        <item name="fontFamily">@font/cardo_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="subtitles">
        <item name="fontFamily">@font/cardo_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="background">@color/coffee</item>
    </style>

</resources>